<%= form_for(credit_card) do |f| %>
  <% if credit_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(credit_card.errors.count, "error") %> prohibited this credit_card from being saved:</h2>

      <ul>
      <% credit_card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :exp_date %>
    <%= select_date Date.today, prefix: :exp_date %> "Pick any day of the month"
  
  </div>

  <div class="field">
    <%= f.label :name_on_card %>
    <%= f.text_field :name_on_card %>
  </div>

  <div class="field">
    <%= f.label :organisation %>
    <%= f.select :organisation, CreditCard.organisations.keys, prompt: 'Select a card type' %>
  </div>

  <div class="field">
    <%= f.label :customer_id %>
    <%= f.collection_select( :customer_id, @customers, :id, :last_name ) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
